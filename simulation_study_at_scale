#
# specific U1~Exposure associations
# U1~HCV Exposure/Selection (OR=1.2)
summary(glm(mean_beta~prevalence,data = sumdat[sumdat$controls=="shared" & sumdat$u1=="U1~HCV Exposure/Selection (OR=1.2)",]))
