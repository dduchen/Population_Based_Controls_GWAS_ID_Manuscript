  geom_boxplot() + theme_bw() + theme(legend.position="bottom") +theme(axis.text.y=element_blank()) +
  labs(y=NULL, x="Odds Ratio (SNP~Outcome of Interest)") + geom_vline(xintercept=1,linetype="dotted") +
