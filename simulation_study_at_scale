  labs(y=NULL, x=NULL) + geom_vline(xintercept=0,linetype="dotted") +
  scale_fill_manual(name="",values=c(met.brewer("VanGogh2", n=6,type="continuous")[3:1])) + theme(axis.line=element_line()) +
